{
  "name": "jspulse-backend",
  "version": "0.1.0",
  "description": "Backend для JS Пульс - агрегатора вакансий по фронтенду",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch './src/**/*.ts' --watch './*.ts' --ext ts,json --exec 'pnpm run build && node dist/index.js'",
    "build": "tsc -p tsconfig.json",
    "seed": "pnpm run build && node dist/data/seedDatabase.js",
    "fetch:hh": "pnpm run build && node dist/scripts/fetchAndSaveFromHH.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "@jspulse/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
