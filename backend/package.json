{
  "name": "jspulse-backend",
  "version": "0.1.0",
  "description": "Backend для JS Пульс - агрегатора вакансий по фронтенду",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch './**/*.ts' --ext ts,json --exec 'pnpm run build && node dist/index.js'",
    "build": "rm -rf dist && tsc -p tsconfig.json --listEmittedFiles",
    "seed:run": "node -r dotenv/config dist/data/seedDatabase.js",
    "fetch:hh:run": "node -r dotenv/config dist/scripts/fetchAndSaveFromHH.js",
    "clear:db:run": "node -r dotenv/config dist/scripts/clearDatabase.js",
    "db:refresh": "pnpm run build && pnpm run clear:db:run && pnpm run seed:run && pnpm run fetch:hh:run",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@jspulse/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ky": "^1.8.1",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.14.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
