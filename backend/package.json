{
  "name": "@jspulse/backend",
  "version": "0.1.0",
  "description": "Backend для JS Пульс - агрегатора вакансий по фронтенду",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "db:clear:gj": "tsx src/scripts/clearGeekJob.ts",
    "db:gj:one": "tsx src/scripts/fetchGeekJobOne.ts",
    "start": "node dist/index.js",
    "dev": "sleep 5 && nodemon --exec tsx src/index.ts",
    "build": "rm -rf dist && mkdir -p dist/config dist/models dist/routes dist/scripts dist/utils dist/data && npx tsc --project tsconfig.build.json",
    "db:seed": "tsx src/data/seedDatabase.ts",
    "db:hh": "tsx src/scripts/fetchAndSaveFromHH.ts",
    "db:habr": "tsx src/scripts/fetchAndSaveFromHabr.ts",
    "db:clear": "tsx src/scripts/clearDatabase.ts",
    "tg:ulbi": "tsx src/scripts/parseTelegramUlbi.ts",
    "db": "pnpm run db:hh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --config=jest.config.cjs tests/unit",
    "test:integration": "jest --config=jest.config.cjs tests/integration",
    "test:scheduler": "node dist/scripts/testDockerScheduler.js",
    "test:telegram": "tsx src/scripts/testMessageProcessor.ts",
    "test:telegram:real": "tsx src/scripts/testRealTelegramParsing.ts",
    "test:telegram:service": "tsx src/scripts/testTelegramParserService.ts",
    "telegram:auth": "tsx src/scripts/generateTelegramSession.ts",
    "telegram:diagnostic": "tsx src/scripts/diagnosticChannel.ts",
    "scheduler-demo": "node dist/scripts/testDockerScheduler.js",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@jspulse/shared": "workspace:*",
    "@types/node-cron": "^3.0.11",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ky": "^1.8.1",
    "mongoose": "^8.13.2",
    "node-cron": "^4.1.0",
    "telegram": "^2.26.22",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
