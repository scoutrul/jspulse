{
  "name": "jspulse",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter @jspulse/shared run dev\" \"pnpm --filter @jspulse/backend run dev\" \"pnpm --filter @jspulse/frontend run dev\"",
    "build": "pnpm -r run build",
    "docker:up": "pnpm run build && docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "lint": "eslint . --ext .js,.ts,.svelte",
    "lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-svelte": "^2.46.1",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3"
  }
}
